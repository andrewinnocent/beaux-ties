<div class="row">
  <div class="col-sm-6">
    <div class="thumbnail">
      <img src={{model.image}} alt={{model.image}}>

    </div>
  </div>
  <div class="col-md-6 col-md-4">
    <div class="caption">
      <h3>{{model.name}} {{model.style}}</h3>
      <h5>{{model.fabric}} {{model.color}}</h5>
      <p>{{model.description}}</p>
      <h3>${{model.price}}</h3>

      {{add-to-cart bow=model addToCart='addToCart'}}
      <br>
      <p>{{#link-to 'bows'}}Back to All Beaux-Ties{{/link-to}}</p>
    </div>
  </div>
</div>
