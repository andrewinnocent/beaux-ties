<div class="col-sm-6 col-md-4 col-lg-4">
  <div class="row">
    <div class="thumbnail">
      {{#link-to 'bow' bow}}<img src={{bow.image}} alt="{{bow.name}}">{{/link-to}}
      <div class="caption">
        {{#link-to 'bow' bow}}<h3>{{bow.name}}</h3>{{/link-to}}
        <h4>{{bow.style}}</h4>
        <h3>${{bow.price}}</h3>
        {{#if isAuthenticated}}
        {{add-to-cart}}
        {{else}}
        {{#link-to 'sign-up'}} Sign Up {{/link-to}} or {{#link-to 'sign-in'}} Sign In to Shop {{/link-to}}
        {{/if}}
      </div>
    </div>
  </div>
</div>
