<h2>Shopping Cart</h2>
<div class="well">
  {{#if model}}

  <ul class="list-group">
{{#each model as |bowsCart|}}

    <li class="list-group-item">
      <div class="media">
        <div class="media-left media-middle">
            <img class="media-object media-img" src={{bowsCart.bow.image}} alt={{bowsCart.bow.image}}>
        </div>
        <div class="media-body">
          <h4 class="media-heading">{{bowsCart.bow.name}} ${{bowsCart.bow.price}}</h4>
          <p>{{bowsCart.bow.description}}</p>
          {{remove-bow bow=bowsCart removeFromCart='removeFromCart'}}
        </div>
      </div>
    </li>

    {{!-- {{bowsCart.total}} --}}
{{/each}}
</ul>
{{!-- <div class="total">
  <h3>Total: ${{bowsCart.total}}</h3>
</div> --}}
{{else}}
<div>
  <h3>{{#link-to 'bows'}}Add Beaux-Ties to Your Cart!{{/link-to}}</h3>
</div>
{{/if}}
</div>

  {{!-- <div>
    <h3>Total: ${{log model}}</h3>
  </div> --}}
<div>
  {{checkout-button checkout='checkout'}}
</div>
<div>
  {{#link-to 'bows'}}Back to Shopping{{/link-to}}
</div>
